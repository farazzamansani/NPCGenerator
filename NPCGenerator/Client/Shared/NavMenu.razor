        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="fas fa-dungeon" aria-hidden="true"></span> <tabtext class="tabText">Home</tabtext>
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="GenerateNPC">
                <span class="fas fa-dice-d20" aria-hidden="true"></span> <tabtext class="tabText"> Generate NPC</tabtext>
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="GenerateWeather">
                <span class="fas fa-bolt" aria-hidden="true"></span> <tabtext class="tabText"> Generate Weather</tabtext>
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="multiple">
                <span class="fa fa-book-dead" aria-hidden="true"></span> <tabtext class="tabText">Multiple</tabtext>
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="support">
                <span id="support" class="fa fa-hands-helping" aria-hidden="true"></span> <tabtext class="tabText">Support the Site</tabtext>
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
