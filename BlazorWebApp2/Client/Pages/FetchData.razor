@page "/fetchdata"
@using BlazorWebApp2.Shared
@inject HttpClient Http

<PageTitle>NPC Generator</PageTitle>

<h1> Icewind Dale NPC Generator</h1>

<p>This component demonstrates fetching data from the server.</p>
<p2> testing p2</p2>

@if (forecasts == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Age</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>SkinTone</th>
                <th>HairColor</th>
                <th>HairStyle</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var forecast in forecasts)
        {
            <tr>
                <td>@forecast.Age</td>
                <td>@forecast.FirstName</td>
                <td>@forecast.LastName</td>
                <td>@forecast.SkinTone</td>
                <td>@forecast.HairColor</td>
                <td>@forecast.HairStyle</td>
            </tr>
        }
        </tbody>
        <button class="btn btn-primary" @onclick="IncrementCount">Refresh</button>
    </table>
}

@code {
    private NPC[]? forecasts;

    protected override async Task OnInitializedAsync()
    {
        forecasts = await Http.GetFromJsonAsync<NPC[]>("NPCGenerator");
    }
    private async void IncrementCount()
    {
        forecasts = await Http.GetFromJsonAsync<NPC[]>("NPCGenerator");
    }
}
